<?php

namespace UsersBundle\Repository;

use Doctrine\ORM\EntityRepository;

/**
 * DevolucionRepository
 *
 * This class was generated by the Doctrine ORM. Add your own custom
 * repository methods below.
 */
class DevolucionRepository extends EntityRepository
{
	public function findByLogisticsReturns(){
	
		return $this->getEntityManager()->createQuery("SELECT d FROM UsersBundle\Entity\Devolucion d WHERE 
		d.estado = 'Sin tramitar' OR d.estado = 'Pendiente'")->getResult();
		
	}
	
}
